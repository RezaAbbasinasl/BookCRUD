@model Book
@{
}
<form class="form-group" method="POST" asp-action="Create" >
    <label>Title</label>
    <input class="form-control" type="text" asp-for="@Model.Titel" >

    <label>Author</label>
    <input class="form-control" type="text" asp-for="@Model.Author">

    <label>Genre</label>
    <input class="form-control" type="text" asp-for="@Model.Genre">

    <label>Price</label>
    <input class="form-control" type="number" asp-for="@Model.Price">

    <label>Publish Date</label>
    <input class="form-control" type="datetime" asp-for="@Model.PublishDate">

    <input type="submit" value="Create" class="btn btn-success mt-4"/>
</form>
